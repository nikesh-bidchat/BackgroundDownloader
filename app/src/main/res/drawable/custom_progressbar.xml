        </clip>
    </item>

    <item
        android:id="@android:id/progress"
        android:bottom="6dp"
        android:top="6dp">
        <clip>
            <shape>
                <solid android:color="#eb3850" />
            </shape>
        </clip>
    </item>

</layer-list>